<prism:PrismApplication x:Class="Rubik.App.App"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:rubik="https://github.com/huangjia2107/Rubik/"
                        xmlns:prism="http://prismlibrary.com/">    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="{x:Static rubik:ResourceKeys.RubikThemeSource}" />
                <ResourceDictionary Source="/Rubik.App;component/Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="/Rubik.App;component/Styles/RadioButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
