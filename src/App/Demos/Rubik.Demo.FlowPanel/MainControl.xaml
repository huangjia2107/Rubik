<UserControl x:Class="Rubik.Demo.FlowPanel.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:rteControls="clr-namespace:Rubik.Theme.Extension.Controls;assembly=Rubik.Theme.Extension">
    <StackPanel>
        <rteControls:CodeViewer Title="Fixed Columns" Description="Arrange child elements according to the number of columns">
            <rteControls:CodeViewer.Code>
                <sys:String xml:space="preserve">
<![CDATA[<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:panels="clr-namespace:Rubik.Theme.Panels;assembly=Rubik.Theme">
    <panels:FlowPanel Space="20,10" Padding="20,10" Columns="4">
        <Button Content="1" Height="80"/>
        <Button Content="2" Height="60"/>
        <Button Content="3" Height="90"/>
        <Button Content="4" Height="150"/>
        <Button Content="5" Height="120"/>
        <Button Content="6" Height="100"/>
        <Button Content="7" Height="120"/>
        <Button Content="8" Height="100"/>
        <Button Content="9" Height="100"/>
        <Button Content="10" Height="120"/>
    </panels:FlowPanel>
</Grid>]]>
                </sys:String>
            </rteControls:CodeViewer.Code>
        </rteControls:CodeViewer>
    </StackPanel>
</UserControl>
