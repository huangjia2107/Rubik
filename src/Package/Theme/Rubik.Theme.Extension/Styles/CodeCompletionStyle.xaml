<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cc="clr-namespace:ICSharpCode.AvalonEdit.CodeCompletion;assembly=ICSharpCode.AvalonEdit"
                    xmlns:controls="clr-namespace:Rubik.Theme.Extension.Controls">

    <Style TargetType="{x:Type controls:CompletionWindow}">
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="0" GlassFrameThickness="0,0,0,1"/>
            </Setter.Value>
        </Setter> 
    </Style>
    
    <Style TargetType="{x:Type cc:CompletionList}">
        <Setter Property="Background" Value="#F5F5F5" />
        <Setter Property="BorderBrush" Value="LightGray" />
        <Setter Property="FontSize" Value="12" />
    </Style> 

</ResourceDictionary>