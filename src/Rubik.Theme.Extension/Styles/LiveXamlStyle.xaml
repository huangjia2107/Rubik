                                </Button>
                                <Button Width="40" ToolTip="Save"
                                        Command="{x:Static controls:LiveXaml.SaveXamlCommand}"
                                        Style="{StaticResource {x:Static themes:ResourceKeys.ToolbarButtonStyleKey}}">
